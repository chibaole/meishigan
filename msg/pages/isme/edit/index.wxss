.page {
  background: #f6f6f6;
  /* height: 100%; */
}

.avatar {
  height: 156rpx;
  background: #de4f2b;
  /* border: 1rpx solid #000; */
}

.avatar image {
  height: 176rpx;
  width: 176rpx;
  border-radius: 50%;
  border: 4px solid #de4f2b;
  margin-top: 68rpx;
  margin-left: 287rpx;
}

.updata {
  background: #fff;
  width: 710rpx;
  /* height: 836rpx; */
  margin: 0 auto;
  border: 1rpx solid #fff;
}

.nickname {
  border-bottom: 1rpx solid #e3e9ec;
  width: 630rpx;
  margin: 152rpx auto 0;
}

.nickname_text {
  font-family: PingFangSC-Light;
  font-size: 28rpx;
  color: #878787;
  line-height: 28rpx;
  /* border: 1rpx solid #000;  *//* width: 112rpx; */
  margin: 0rpx auto 52rpx 0;
}

.inputName input {
  /* border:  1rpx solid #000; */
  height: 10rpx;
  width: 300rpx;
  margin-bottom: 48rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #454553;
  line-height: 32rpx;
}

.invitation {
  /* border: 1rpx solid #000; / */
  margin-top: 40rpx;
}

.invitationCode {
  font-family: PingFangSC-Light;
  font-size: 28rpx;
  color: #878787;
  line-height: 28rpx;
  width: 254rpx;
  border: 1rpx solid #000;
}

.yourmark {
  margin-bottom: 48rpx;
  /* border: 1rpx solid #000; */
}

.label_box {
  width: 630rpx;
  display: -webkit-box;
  /* -webkit-line-clamp: 2; *//* -webkit-box-orient: vertical; *//* overflow: hidden; */
}

.label {
  /* border: 1rpx solid #000; */
  display: inline-block;
  background: #f2f4f8;
  /* border-radius: 6rpx; */
  margin: 10rpx;
  padding: 8rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #565664;
  letter-spacing: 0.22rpx;
}

.active {
  display: inline-block;
  background: #de4f2b;
  /* border-radius: 6rpx; */
  margin: 10rpx;
  padding: 8rpx;
  color: #fff;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  letter-spacing: 0.22rpx;
}

.confirm {
  margin: 78rpx auto 20rpx;
  width: 710rpx;
  height: 116rpx;
  background: #de4f2b;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #fff;
  letter-spacing: 0;
  text-align: center;
  line-height: 116rpx;
}

.confirm button {
  border: none;
  background: #de4f2b;
  color: #fff;
  line-height: 116rpx;
}

button::after {
  border: 0 none;
}
